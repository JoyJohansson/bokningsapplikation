import pytest
from K1_routes import app

@pytest.fixture
def client():
    app.config['TESTING'] = True
    with app.test_client() as client:
        yield client

def test_k1_route(client):
    response = client.get('/')
    assert response.status_code == 200
    assert b"k1_start.html" in response.data

def test_generate_random_code():
    code = generate_random_code()
    assert isinstance(code, int)
    assert 100000 <= code <= 999999
